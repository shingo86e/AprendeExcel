rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colecci칩n de usuarios
    match /users/{userId} {
      // Los usuarios pueden leer y escribir solo su propio documento
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para la colecci칩n de progreso (si existe)
    match /progress/{userId} {
      // Los usuarios pueden leer y escribir solo su propio progreso
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para la colecci칩n de progreso del quiz
    match /quizProgress/{userId} {
      // Los usuarios pueden leer y escribir solo su propio progreso de quiz
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Bloquear acceso a todas las dem치s colecciones por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}